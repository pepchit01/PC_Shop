                <div class="col-md-3"></div>
            </div>
        </div>
        <div class="form-group box-footer">
            <div class="col-md-offset-3 col-md-9">
                <span>
                    <input type="submit" value="Thêm" class="btn btn-primary btn" /> &nbsp &nbsp
                    <a href="/Admin/Khachhang/Index"><input class="btn btn-default" type="button" value="Hủy" /></a>
                </span>
            </div>
        </div>
    </div>
