                    @Html.ValidationMessageFor(model => model.DCHIKH, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3"></div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TINH, htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.TINH, new { htmlAttributes = new { @class = "form-control" } })
