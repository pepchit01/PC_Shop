                    @Html.ValidationMessageFor(model => model.DTHOAIKH, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-3"></div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.PASS, htmlAttributes: new { @class = "control-label col-md-3" })
