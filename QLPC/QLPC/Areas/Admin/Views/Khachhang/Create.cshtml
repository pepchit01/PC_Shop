                    @Html.EditorFor(model => model.PASS, new { htmlAttributes = new { @class = "form-control",  placeholder = "Từ 6 đến 15 kí tự." } })
                    @Html.ValidationMessageFor(model => model.PASS, "", new { @class = "text-danger" })
